<footer>
  <% if current_user %>
    <p>
      Logged in as <%= current_user.handle %>.
      <%= link_to "Log out", logout_url, class: "btn btn-primary" %>
    </p>
  <% else %>
    <p>
      Not logged in.
      <%= link_to "Log in", login_url, class: "btn btn-primary" %>
      <%= link_to "Sign up", signup_url, class: "btn btn-secondary" %>
    </p>
  <% end %>
</footer>
