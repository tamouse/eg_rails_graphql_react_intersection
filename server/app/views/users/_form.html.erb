<%= form_with(model: user, local: true) do |form| %>
  <%= render partial: 'shared/form_errors', locals: { model: @user } %>

  <div class="form-group">
    <%= form.label :handle %>
    <%= form.text_field :handle, class: "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.text_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
