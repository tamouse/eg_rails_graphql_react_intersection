<%= content_for :content_title do %>
  <h1>New Post</h1>
<% end %>

<%= content_for :content_body do %>
  <%= render 'form', post: @post %>
<% end %>

<%= content_for :content_footer do %>
  <% if current_user.present? %>
    <%= link_to 'Posts', user_posts_path(current_user), class: "btn btn-primary" %>
  <% end %>
<% end %>

